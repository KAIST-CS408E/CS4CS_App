<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_m"
        app:menu="@menu/activity_main_drawer" />
    -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT USER UNKNOWN"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_conversion_absoluteHeight="25dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Switch
            android:id="@+id/official_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am an offical"
            tools:layout_conversion_absoluteHeight="27dp"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to map"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="52dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/button_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="100dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/button_server_connection_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Connection Test"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="148dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="196dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/button_all_alarms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW ALL ALARMS"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="244dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/button_test_self_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Test]Push Self Alarm"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="292dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="360dp" />

        <Button
            android:id="@+id/not_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeclineAlarm"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="371dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="126dp" />

        <Button
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReceiveAlarm"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="450dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="125dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>


